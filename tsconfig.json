{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2021",
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
